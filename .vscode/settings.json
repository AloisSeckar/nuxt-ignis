{
    // enable auto-linting
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.eslint": "explicit"
    },
    // ESlint flat config
    "eslint.useFlatConfig": true,
    // allow multiple eslint configurations
    "eslint.workingDirectories": [
        { "mode": "auto" },
    ],
}
